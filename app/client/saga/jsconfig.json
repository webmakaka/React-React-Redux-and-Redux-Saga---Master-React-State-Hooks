{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "checkJs": true,
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["./src/**/*.js"]
}
